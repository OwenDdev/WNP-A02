<Window x:Class="WDFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDFClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Name ="GameLabel"  Content="SET Jumble" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Width="316" HorizontalContentAlignment="Center" Height="28" FontSize="16"/>
        <Button Name ="PlayBtn" Content="Play" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Height="29" Width="210" Click="Play_Click"/>
        <Button Name ="QuitBtn"  Content="Quit" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Height="29" Width="210" Click="Quit_Click"/>

        <Label Name ="Loginlabel" Content="Login" HorizontalAlignment="Center" Margin="0,36,0,0" VerticalAlignment="Top" Width="316" HorizontalContentAlignment="Center" Height="28" FontSize="16" Visibility="Hidden"/>
        <Button Name ="LoginBtn" Content="Login" HorizontalAlignment="Left" Margin="510,144,0,0" VerticalAlignment="Top" Height="29" Width="85" Click="Login_Click" Visibility="Hidden"/>
        <Button Name ="BackBtn" Content="Back" HorizontalAlignment="Left" Margin="636,144,0,0" VerticalAlignment="Top" Height="29" Width="85" Click="Back_Click" Visibility="Hidden"/>
        <TextBox Name ="LoginBox" HorizontalAlignment="Left" Margin="122,144,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="319" Height="29" Visibility="Hidden"/>


    </Grid>
</Window>
