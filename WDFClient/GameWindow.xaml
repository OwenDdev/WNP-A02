* DESCRIPTION   :
*      This file contains the XAML markup for the Word Jumble Game client user interface.
*      It defines a WPF window with a clean, organized layout for the word guessing game.
*      The interface includes:
*      - A prominently displayed jumbled word string for players to solve
*      - Statistics panel showing score, wrong guesses, timer, and hints remaining
*      - Input area with text box for guesses and buttons for Guess, Hint, and Quit actions
*      - Dynamic word grid displays that adapt to show 9 or 20 found word slots
*        depending on the number of words in the current puzzle
*      The UI uses a professional color scheme with visual feedback elements and
*      responsive layouts through Grid and StackPanel containers.
-->

<Window x:Class="WDFClient.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WDFClient"
        mc:Ignorable="d"
        Title="Word Jumble Game" Height="550" Width="750"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <Label Grid.Row="0" Content="WORD JUMBLE" 
               HorizontalAlignment="Center" FontSize="24" 
               FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>

        <!-- Jumble Word Display -->
        <Border Grid.Row="1" Background="White" BorderBrush="#3498DB" 
                BorderThickness="2" CornerRadius="5" Padding="10" 
                HorizontalAlignment="Center" Width="400" Margin="0,0,0,10">
            <Label Name="Worddisplay" Content="Word" 
                   HorizontalAlignment="Center" FontSize="18" 
                   FontWeight="SemiBold" Foreground="#2C3E50"/>
        </Border>

        <!-- Stats Panel -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Score -->
            <StackPanel Grid.Column="0" Orientation="Vertical" 
                        HorizontalAlignment="Right" Margin="0,0,10,0">
                <Label Content="FOUND" FontWeight="Bold" Foreground="#2C3E50" Padding="0" FontSize="12"/>
                <Label x:Name="Scoredisplay" Content="0/0" FontSize="16" 
                       FontWeight="Bold" Foreground="#27AE60" Padding="0"/>
            </StackPanel>

            <Separator Grid.Column="1" Width="2" Background="#BDC3C7" Margin="5,0"/>

            <!-- Wrong Guesses -->
            <StackPanel Grid.Column="2" Orientation="Vertical" 
                        HorizontalAlignment="Center">
                <Label Content="WRONG" FontWeight="Bold" Foreground="#2C3E50" Padding="0" FontSize="12"/>
                <Label x:Name="WrongGuessDisplay" Content="0/3" FontSize="16" 
                       FontWeight="Bold" Foreground="#E74C3C" Padding="0"/>
            </StackPanel>

            <Separator Grid.Column="3" Width="2" Background="#BDC3C7" Margin="5,0"/>

            <!-- Timer -->
            <StackPanel Grid.Column="4" Orientation="Vertical" HorizontalAlignment="Center">
                <Label Content="TIME" FontWeight="Bold" Foreground="#2C3E50" Padding="0" FontSize="12"/>
                <Label x:Name="TimeDisplay" Content="02:00" FontSize="16" 
                       FontWeight="Bold" Foreground="#E74C3C" Padding="0"/>
            </StackPanel>

            <Separator Grid.Column="5" Width="2" Background="#BDC3C7" Margin="5,0"/>

            <!-- Hints Left -->
            <StackPanel Grid.Column="6" Orientation="Vertical" 
                        HorizontalAlignment="Left" Margin="10,0,0,0">
                <Label Content="HINTS" FontWeight="Bold" Foreground="#2C3E50" Padding="0" FontSize="12"/>
                <Label x:Name="HintsLeftDisplay" Content="3" FontSize="16" 
                       FontWeight="Bold" Foreground="#F39C12" Padding="0"/>
            </StackPanel>
        </Grid>

        <!-- Input Area -->
        <Border Grid.Row="3" Background="White" BorderBrush="#3498DB" 
                BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Guess:" 
                       FontWeight="SemiBold" Foreground="#2C3E50" 
                       VerticalAlignment="Center" Margin="0,0,5,0"/>

                <TextBox Grid.Column="1" Name="GuessBox" Height="30" 
                         FontSize="14" Padding="5" TextChanged="GuessBox_TextChanged"
                         BorderBrush="#3498DB" BorderThickness="1"
                         VerticalContentAlignment="Center" Margin="0,0,5,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="GUESS" Width="70" Height="30" 
                            Background="#3498DB" Foreground="White" 
                            FontWeight="Bold" BorderThickness="0"
                            Margin="0,0,5,0" Click="Guess_Click"/>
                    <Button Content="HINT" Width="70" Height="30" 
                            Background="#F39C12" Foreground="White" 
                            FontWeight="Bold" BorderThickness="0"
                            Margin="0,0,5,0" Click="Hint_Click"/>
                </StackPanel>

                <Button Grid.Column="3" Content="QUIT" Width="70" Height="30" 
                        Background="#E74C3C" Foreground="White" 
                        FontWeight="Bold" BorderThickness="0"
                        Margin="5,0,0,0" Click="Quit_Click"/>
            </Grid>
        </Border>

